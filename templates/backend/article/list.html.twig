{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Articles</h1>
                <hr>
                <a href="{{ path('app.admin.articles.create') }}" class="btn btn-primary">Create new</a>
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Content</th>
                        <th>Slug</th>
                        <th>Author</th>
                        <th>CreatedAt</th>
                        <th>UpdatedAt</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for article in articles %}
                        <tr>
                            <td>{{ article.id }}</td>
                            <td>{{ article.title }}</td>
                            <td>{{ article.content }}</td>
                            <td>{{ article.slug }}</td>
                            <td>{{ article.author.username }}</td>
                            <td>{{ article.createdAt|date('Y-m-d H:i:s') }}</td>
                            <td>{{ article.updatedAt|date('Y-m-d H:i:s') }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            {% for article in articles %}
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.title }}</h5>
                            <p class="card-text">{{ article.content }}</p>
                            <p class="card-text">Published on {{ article.createdAt|format_datetime('full', 'none') }}
                                by {{ article.author.username }}</p>
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('app.admin.articles.item', {slug: article.slug}) }}"
                               class="btn btn-primary">Read more</a>
                            <a href="{{ path('app.admin.articles.edit', {slug: article.slug}) }}"
                               class="btn btn-warning">Edit</a>
                            <a href="{{ path('app.admin.articles.delete', {slug: article.slug}) }}"
                               class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
